{
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"],
      "@pages": ["./src/pages/*"],
      "@shared": ["./src/shared/*"]
    },
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/app/routers/index.ts",
    "src/app/main.js"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
